<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @movie.image_url, size: 250 %>
</p>

<p>
  <strong>Name:</strong>
  <%= @movie.name %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Summary:</strong>
  <%= @movie.summary %>
</p>

<p>
  <strong>Genres:</strong>
  <%= @movie.genres %>
</p>

<% if @comments.present? %>
<ul>
  <% @comments.each do |comment| %>
    <%= @comment.inspect %>
  <% end %>
</ul>
<% end %>

